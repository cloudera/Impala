+module Shell
+  module Commands
+    class IsInMaintenanceMode < Command
+      def help
+        <<-EOF
+Is master in maintenance mode? For example:
+
+  hbase> is_in_maintenance_mode
+EOF
+      end
+
+      def command
+        state = admin.in_maintenance_mode?
+        formatter.row([state.to_s])
+        state
+      end
+    end
+  end
+end
